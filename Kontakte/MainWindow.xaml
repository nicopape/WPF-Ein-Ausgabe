<Window x:Class="Kontakte.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kontakte"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <StackPanel Margin="20">
        <Label Height="25">Vorname:</Label>
        <TextBox x:Name="txtBox_vorname"/>
        <Label Height="25">Nachname:</Label>
        <TextBox x:Name="txtBox_nachname"/>
        <Label Height="25">Straße:</Label>
        <TextBox x:Name="txtBox_straße"/>
        <Label Height="25">Ort:</Label>
        <TextBox x:Name="txtBox_ort"/>
        <Label Height="25">E-Mail:</Label>
        <TextBox x:Name="txtBox_email"/>
        <Button Click="Button_Click" Margin="10">Akzeptieren</Button>
        <Label Margin="20,0,20,0" x:Name="lbl_message" Height="55"/>
    </StackPanel>
</Window>
